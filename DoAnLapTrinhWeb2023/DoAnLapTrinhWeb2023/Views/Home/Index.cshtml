                                        <div class="item">
                                            <div class="new-product">
                                                <div class="single-product-item">
                                                    <div class="product-image">
                                                        <a href="@Url.Action("Details","Product", new {maSP = item.maSP } )"><img src="@item.hinhDD" alt="product-image" /></a>
